{% extends 'UltranetCoreBundle::layout.html.twig' %}
{% block title %}
    Formations - {{ parent() }}
{% endblock %}
{% block body_content %}
    <div class="container" style="margin-top: 20px">

        <!-- Page Heading/Breadcrumbs -->
        <br>
        <div class="row">
            <div class="col-lg-12">
                <ol class="breadcrumb">
                    <li><a href=" {{ path("ultranet_core_homepage") }} "> <i class="fa fa-home"></i> Accueil</a>
                    </li>
                    <li class="active">Formations</li>
                </ol>
            </div>
        </div>
        <!-- /.row -->

        <div class="row formation">
            {% if formations is not empty %}
                {% for formation in formations %}
                    <div class="col-md-4">
                        <div class="card">
                            {% if formation.image is not null %}
                                <img class="card-img-top" src="{{ asset(formation.image.webPath) }}"
                                     alt="image formation">
                            {% else %}
                                <img class="card-img-top"
                                     src="{{ asset('uploads/images/formations/formation_default.jpg') }}"
                                     alt="image formation">
                            {% endif %}
                            <div class="card-block">
                                <h4 class="card-title">{{ formation.name | truncate(33) }}</h4>
                                <p class="card-text">
                                    {{ formation.description | truncate(130) }}
                                </p>
                                <a href=" {{ path('ultranet_core_show_formationpage', {'slug' : formation.slug}) }} "
                                   class="btn btn-success">Lire plus ...</a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            {% endif %}
        </div>
        <div class="row">
            <div class="col-md-12">

            </div>
        </div>
    </div>
{% endblock %}
