{% extends "UltranetForumBundle::layout.html.twig" %}

{% block title %}
  Nouveau sujet - {{ parent() }}
{% endblock %}

{% block forum_content %}

  <h1>Cr√©ation d'un nouveau sujet</h1>

  <div class="row">
    <div class="col-md-6">
      {{ form_start(form, {'attr': {'class': 'well'}}) }}

      {{ form_errors(form) }}

      <div class="form-group">
        {{ form_label(form.title, 'Titre du sujet', {'attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.title, {'attr': {'class': 'alert alert-danger'}}) }}
      </div>

      <div class="form-group">
        {{ form_label(form.forum, 'Forum', {'attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.forum, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.forum, {'attr': {'class': 'alert alert-danger'}}) }}
      </div>

      <div class="form-group">
        {{ form_label(form.firstPost, 'Votre message ici', {'attr': {'class': 'control-label'}}) }}
        {{ form_widget(form.firstPost.texte, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.firstPost, {'attr': {'class': 'alert alert-danger'}}) }}
      </div>

      {{ form_rest(form) }}

      <div class="form-group">
        <input type="submit" value="Publier" class="btn btn-success">
      </div>

      {{ form_end(form) }}

    </div>
  </div>

{% endblock %}