{% trans_default_domain 'FOSUserBundle' %}

<div class="container">
    <div id="signupbox" style="margin-top:50px" class="mainbox col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2">
        <div class="panel panel-info">
            <div class="panel-heading">
                <div class="panel-title">Inscription</div>
            </div>  
            <div class="panel-body" >

                <form action=" {{path('fos_user_registration_register')}} " class="fos_user_registration_register form-horizontal" method="post" accept-charset="utf-8">

                    <div id="signupalert" style=" display:block " class="alert alert-danger animated fadeIn">
                        <span> {{form_errors(form)}} </span>
                    </div>

                    <div class="form-group">
                        <label for="firstname" class="col-md-6 control-label">Nom : </label>
                        <div class="col-md-6">
                            {{form_widget(form.name, {attr: {'class':'form-control', 'placeholder':'Nom'}})}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="lastname" class="col-md-6 control-label">Prenoms : </label>
                        <div class="col-md-6">
                            {{form_widget(form.subnames, {attr: {'class':'form-control', 'placeholder':'Prenoms'}})}}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-md-6 control-label">Email : </label>
                        <div class="col-md-6">
                            {{ form_widget(form.email, {attr: {'class':'form-control', 'placeholder':'E-mail'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="phone" class="col-md-6 control-label">Téléphone : </label>
                        <div class="col-md-6">
                            {{ form_widget(form.phoneNumber, {attr: {'class':'form-control', 'placeholder':'Numero de Telephone'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="city" class="col-md-6 control-label">Ville : </label>
                        <div class="col-md-6">
                            {{ form_widget(form.city, {attr: {'class':'form-control', 'placeholder':'Ville'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-md-6 control-label">Quartier : </label>
                        <div class="col-md-6">
                            {{ form_widget(form.quarter, {attr: {'class':'form-control', 'placeholder':'Quartier'}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-md-6 control-label">{{'form.password' | trans}} : </label>
                        <div class="col-md-6">
                            {{ form_widget(form.plainPassword.first, {attr: {'class':'form-control', 'placeholder':'form.password' | trans}}) }}
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="password" class="col-md-6 control-label">{{ 'form.password_confirmation'|trans }} : </label>
                        <div class="col-md-6">
                            {{ form_widget(form.plainPassword.second, {attr: {'class':'form-control', 'placeholder':'form.password_confirmation' | trans}}) }}
                        </div>
                    </div>
                    {{form_rest(form)}}
                    <div class="form-group">
                        <!-- Button -->                                        
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-signup" type="submit" class="btn btn-success"><i class="fa fa-hand-o-right"></i> &nbsp S'inscrire</button>
                            {#<span style="margin-left:8px;">or</span> #} 
                        </div>
                    </div>
                    {#<div style="border-top: 1px solid #999; padding-top:20px"  class="form-group">
    
                        <div class="col-md-offset-3 col-md-9">
                            <button id="btn-fbsignup" type="button" class="btn btn-primary"><i class="icon-facebook"></i>   Sign Up with Facebook</button>
                        </div>                                           
    
                    </div>#}
                </form>

            </div>
        </div>
    </div> 
</div>